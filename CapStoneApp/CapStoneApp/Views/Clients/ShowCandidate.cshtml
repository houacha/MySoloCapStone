@model IEnumerable<CapStoneApp.Models.ApiViewModel>

@{
    ViewBag.Title = "ShowCandidate";
}

<h2>@ViewBag.Info</h2>

<table class="table">
    @switch (ViewBag.Info)
    {
        case "Candidate":
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Party)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Polling)
                </th>
                <th></th>
            </tr>
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Party)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Polling)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "CandidatesDetails", new { id = item.Id })
                    </td>
                    @if (ViewBag.Like == item.Id)
                    {
                        <td>
                            <i class="fa fa-star" style="color:goldenrod"></i>
                        </td>
                    }
                </tr>
            }
            break;
        case "Policy":
