@model IEnumerable<CapStoneApp.Models.ApiViewModel>

@{
    ViewBag.Title = "ShowCandidate";
}

<h2 align="center">@ViewBag.Info</h2>

@if (ViewBag.Info == "Candidate" && ViewBag.Candidates != true)
{
    <h4 align="center">Search A Candidate By Name</h4>
    using (Html.BeginForm())
    {
        <div class="form-group">
            <div align="center">
                @Html.EditorFor(model => model.First().Name, new { htmlAttributes = new { @class = "form-control", @value = " " } })
                @Html.ValidationMessageFor(model => model.First().Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div align="center">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
        <br />
        <br />
    }
}
else
{
    <table class="table">
        @switch (ViewBag.Info)
        {
            case "Candidate":
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Party)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Polling)
                    </th>
                    <th></th>
                </tr>
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Party)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Polling)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "CandidatesDetails", new { id = item.Id })
                        </td>
                        @if (ViewBag.Like == item.Id)
                        {
                            <td>
                                <i class="fa fa-star" style="color:goldenrod"></i>
                            </td>
                        }
                    </tr>
                }
                break;
            case "Policy":
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Issue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stance)
                    </th>
                    <th></th>
                </tr>
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Issue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stance)
                        </td>
                    </tr>
                }
                break;
            case "Theme":
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Issue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stance)
                    </th>
                    <th></th>
                </tr>
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Issue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stance)
                        </td>
                    </tr>
                }
                break;
            case "Endorsement":
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Position)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Party)
                    </th>
                    <th></th>
                </tr>
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Position)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Party)
                        </td>
                    </tr>
                }
                break;
            case "Staff":
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Position)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Experience)
                    </th>
                    <th></th>
                </tr>
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Position)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Experience)
                        </td>
                    </tr>
                }
                break;
            case "Ad":
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.WebsiteUrl)
                    </th>
                    <th></th>
                </tr>
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.WebsiteUrl)
                        </td>
                    </tr>
                }
                break;
            case "Finance":
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th></th>
                </tr>
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            $@Html.DisplayFor(modelItem => item.Amount) Million
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                    </tr>
                }
                break;
            default:
                break;
        }
    </table>

}
